<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <!-- Persistence unit para MySQL -->
    <persistence-unit name="bookover" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!-- EclipseLink buscará las clases anotadas con @Entity -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <!-- Declaramos las clase anotadas con @Entity explícitamente -->
        <!--<class>modelo.datos.Conversacion</class>
        <class>modelo.datos.FotoLibro</class>
        <class>modelo.datos.Intercambio</class>
        <class>modelo.datos.Libro</class>
        <class>modelo.datos.Mensaje</class>
        <class>modelo.datos.Prestamo</class>
        <class>modelo.datos.Transaccion</class>
        <class>modelo.datos.Usuario</class>
        <class>modelo.datos.Valoracion</class>
        <class>modelo.datos.Venta</class>-->

        <properties>
            <!-- Propiedades comunes a toda conexión jpa -->
            <!-- Para MySQL las propiedades son -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gimenoDB" />
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="senda01" />

            <!-- Propiedades particulares de eclipselink -->
            <!-- Indicamos la BBDD -->
            <property name="eclipselink.target-database" value="MySQL"/>
            <!-- Cada vez que se ejecuta la aplicación borramos todas las tablas -->
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <!-- Detalle de la información que muestra EclipseLink -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.level.cache" value="FINE"/>
            <property name="eclipselink.debug" value="ALL"/>
            <property name="eclipselink.weaving" value="static"/>
        </properties>

        <!-- Persistence Unit para Apache Derby -->
    </persistence-unit>
    <persistence-unit name="test" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <!-- Propiedades comunes a toda conexión jpa -->
            <!-- Las dos líneas siguientes utilizan Derby en modo servidor -->
            <!-- <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/ejemplo;create=true"/>-->
            <!-- Las dos siguienetes líneas utilizan Derby en modo embebido -->
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:ejemplo;create=true" />
            <property name="javax.persistence.jdbc.user" value="APP"/>
            <property name="javax.persistence.jdbc.password" value="APP" />

            <!-- Propiedades particulares de eclipselink -->
            <property name="eclipselink.target-database" value="DERBY"/>
            <!-- Para modo servidor -->
            <!-- <property name="eclipselink.ddl-generation" value="create-tables"/>-->
            <!-- Para modo embebido -->
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.level.cache" value="FINE"/>
            <property name="eclipselink.debug" value="ALL"/>
            <property name="eclipselink.weaving" value="static"/>
        </properties>
    </persistence-unit>

</persistence>